<!doctype html>
<html {# {{ site.language_attributes }} #} lang="en">
<head>
    <meta charset="{{ site.charset }}">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ function('portfolio_mix', 'css/main.css') }}">
    <script type="text/javascript" src="{{ function('portfolio_mix', 'js/Main.js') }}"></script>
    {% if function('is_front_page') %}
        <script type="module" src="{{ function('portfolio_mix', 'js/animations_min.js') }}"></script>
    {% endif %}
    <title>{{ __('Theo’s portfolio', 'portfolio') }}</title>
</head>
<body {{ function('body_class') }}>
<div class="container">
    <h1 class="sr-only">
        {{ site.name }}
    </h1>
    <header class="header">
        <nav class="header__nav">
            <h2 class="header__nav__title sr-only">
                {{ header_nav.title }}
            </h2>
            <ul class="header__nav__container">
                {% for item in header_nav.items %}
                    <li class="header__nav__item item__{{ item.slug }}">
                        <a class="header__nav__item__link link__{{ item.slug }}"
                           href="{{ item.link }}">
                            {{ item.title }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </nav>
    </header>


    {% block body '' %}

    <footer class="footer">
        <nav class="footer__nav">
            <h2 class="footer__nav__title sr-only">
                {{ footer_nav.title }}
            </h2>
            <ul class="footer__nav__container">
                <li class="footer__nav__item item__copyright">
                    <p class="footer__nav__item__text text__copyright">
                        {{ __('©Copyright Théo Léonet 2022', 'portfolio') }}
                    </p>
                </li>
                {% for item in footer_nav.items %}
                    <li class="footer__nav__item item__{{ item.slug }}">
                        <a class="footer__nav__item__link link__{{ item.slug }}"
                           href="{{ item.link }}">
                            {{ item.title }}
                        </a>
                    </li>
                {% endfor %}
                <li class="footer__nav__item item__days">
                    <p class="footer__nav__item__text text__days">
                        {{ __('Available for hire in ', 'portfolio') }}
                        <span class="text__days__span">{{ days_left }}</span>
                        {{ __(' days', 'portfolio') }}
                    </p>
                </li>
            </ul>
        </nav>
    </footer>
</div>
</body>
</html>